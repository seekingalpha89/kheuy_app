%h1 Listing jobs

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Company name
      %th Details link
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.title
        %td= job.description
        %td= job.company_name
        %td= job.details_link
        %td= link_to 'Show', job
        %td= link_to 'Edit', edit_job_path(job)
        %td= link_to 'Destroy', job, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Job', new_job_path
